#include<iostream>
#include<cmath>
#include<string>
#include<iomanip>
using namespace std;

int main()
{
	float x,y,z;
	cin>>x>>y>>z;
	char s[100];
	int n;
	cin>>n;
	if(n>=1&&n<=20)
	{
		float a,b,c,t;
		float big=10000;
		string r;
		for(int i=0;i<n;i++)
		{
			cin>>a>>b>>c;
			t=sqrt(pow(a-x,2)+pow(b-y,2)+pow(c-z,2));
			if(big>t)
			{
				big=t;
				sprintf(s,"%.2f",a);
				r="(";r+=s;r+=",";
				sprintf(s,"%.2f",b);
				r+=s;r+=",";
				sprintf(s,"%.2f",c);
				r+=s;r+=")";r+="	";
			}
		}
		sprintf(s,"%.2f",big);
		r+=s;
		cout<<r;
	}
	return 0;
}
